generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id String @id @default(uuid())
  sessionId String
  name String
  content String
  isComplete Boolean
}

model Session {
  id String @id @default(uuid())
  name String
  ProjectId String
}

model Project {
  id String @id @default(uuid())
  name String
  adminId String 
  users User[] @relation("ProjectUser")
  admins User[] @relation("ProjectAdmin")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  password String
  projects Project[] @relation("ProjectUser")
  projectAdmins Project[] @relation("ProjectAdmin")
}
